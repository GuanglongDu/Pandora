<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.pandorabox.domain">
	<class name="User" table="user">
		<id name="userId" column="user_id">
			<generator class="increment" />
		</id>
		<property name="username" type="string" />
		<property name="passwd" type="string" />
		<property name="email" type="string"/>
		<list name="articles" inverse="true" cascade="all" lazy="false">
			<key column="article_id" not-null="true" />
			<index column="article_index" type="integer" />
			<one-to-many class="Article" />
		</list>
	</class>
</hibernate-mapping>
